#!/usr/bin/env sh

query=$(printf '%s' "$*" | tr ' ' '+')
movie=$(curl -s https://www.1377x.to/search/${query}/1/ | grep -Eo "torrent\/[0-9]{7}\/[a-zA-Z0-9?%-]*/" | head -n 1)
magnet=$(curl -s https://www.1377x.to/${movie} | grep -Po "magnet:\?xt=urn:btih:[a-zA-Z0-9]*" | head -n 1)
peerflix $magnet -l -k
